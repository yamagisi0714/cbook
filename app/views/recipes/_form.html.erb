<div class="recipe_form">
<%= form_for @recipe do |f| %>
  <div class="field">
    <%= f.label :title, "タイトル" %>
    <br>
    <%= f.text_field :title %>
    <%= f.collection_select :category_id, Category.all, :id, :category_name %>
    <br>
    <br>
    <%= f.label :comment, "レシピへのコメント" %>
    <br>
    <%= f.text_area :comment, :size=>"60x5" %>
    <br>
    <br>
  </div>
  <div class="field">
    <%= f.label :cook_image, "完成品画像" %>
    <%= f.attachment_field :cook_image, placeholder: "料理完成画像", class: "attachment_form" %>
  </div>
  <h3>材料</h3>
  <div id="materials">
    <%= f.fields_for :materials do |material| %>
      <%= render 'material_fields', f: material %>
    <% end %>
    <div id="links">
      <%= link_to_add_association '材料を追加',f, :materials, class: "btn btn-default" %>
    </div>
  </div>
  <h3>手順</h3>
  <div id="step">
    <%= f.fields_for :steps do |step| %>
      <%= render 'step_fields', f: step %>
    <% end %>
  <div id="links">
    <%= link_to_add_association '手順を追加',f, :steps, class: "btn btn-default" %>
  </div>
  <br>
  <div id="group">
    <%= f.label :cook_image, "投稿するグループを選択" %>
    <%= f.collection_select :group_id, @ingroup, :id, :group_name %>
  </div>
  <br>
  <%= f.submit 'レシピを投稿', class: "col-xs-6 col-xs-offset-3" %>
  <br>
  <br>
<% end %>
</div>


