<div class="container">
	<div class="row">
		<div class="sidebar">
			<%= render 'root/sidebar' %>
		</div>
		<div class="history col-xs-10">
			<% @user.recipes.each do |h| %>
			<div class="recipe col-xs-3 thumbnail">
				<div class="image">
					<%= link_to recipe_path(h) do %>
						<%= attachment_image_tag h, :cook_image, fallback:"no_image.jpg" %>
					<% end %>
				</div>
				<div class="title">
					<%= link_to recipe_path(h) do %>
						<%= h.title %>
					<% end %>
				</div>
				<div class="count">
					<%= h.views %>回閲覧
				</div>
				<div class="update deta">
					<%= h.updated_at.strftime('%Y/%m/%d') %>
				</div>
			<% end %>
		</div>
	</div>
</div>
